{% extends 'base.html.twig' %}

{% block body %}


    <div id="container" class="col-md-10">
        <h3>Edit address book</h3>
        <ul>
            {% if errors is defined %}
                {% for error in errors %}
                    <div class="alert alert-danger" role="alert">{{ error }}</div>
                {% endfor %}
            {%  endif %}
        </ul>

        <form class="form-horizontal" method="post" action="/update_address_book/{{ book.id }}" enctype="multipart/form-data">
     <input type="hidden" name="token" value="{{ csrf_token('edit_address') }}" />
     <div class="form-group">
        <label class="control-label col-sm-2" for="Firstname">Firstname:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="email" name="first_name"
                value="{{ book.firstName }}" >
        </div>
    </div>
     <div class="form-group">
         <label class="control-label col-sm-2" for="Lastname">Lastname:</label>
         <div class="col-sm-10">
             <input type="text" class="form-control" id="Lastname"  value="{{ book.lastName }}"
                    name ="last_name" >
         </div>
     </div>
     <div class="form-group">
         <label class="control-label col-sm-2" for="Firstname">Street and number:</label>
         <div class="col-sm-10">
             <input type="text" class="form-control" id="email"  name = "street"
                    value="{{ book.email }}"
                    >
         </div>
     </div>
     <div class="form-group">
         <label class="control-label col-sm-2" for="Firstname">Zip:</label>
         <div class="col-sm-10">
             <input type="text" class="form-control" id="email"  name="zip" value="{{ book.zip }}">
         </div>
     </div>
     <div class="form-group">
         <label class="control-label col-sm-2" for="Firstname">Country:</label>
         <div class="col-sm-10">
             <input type="text" class="form-control" id="email"  name="country" value="{{ book.country }}">
         </div>
     </div>
     <div class="form-group">
         <label class="control-label col-sm-2" for="Firstname">City:</label>
         <div class="col-sm-10">
             <input type="text" class="form-control" id="email"  name="city" value="{{ book.city }}">
         </div>
     </div>
     <div class="form-group">
         <label class="control-label col-sm-2" for="Firstname">Phone Number:</label>
         <div class="col-sm-10">
             <input type="text" class="form-control" id="email" name="phone_number" value="{{ book.phoneNumber }}">
         </div>
     </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Birthday:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="pwd" name="birthday" value="{{ book.birthday }}">
        </div>
    </div>
     <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Email address:</label>
        <div class="col-sm-10">
            <input type="Email" class="form-control" id="pwd" name="email" value="{{ book.email }}">
        </div>
    </div>
     <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Picture:</label>
        <div class="col-sm-10">
            <img src="{{ asset('uploads/images/')}}{{ book.picture }}" width="100"  height="100"/>
            <input type="file" class="form-control" id="pwd" name="picture" value="{{ book.picture }}">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </div>
</form>
    </div>

{% endblock %}

{% block stylesheets %}
 <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
{% endblock %}
